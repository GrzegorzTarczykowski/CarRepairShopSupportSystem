
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundMainGradientSelector">
    <Button
        android:text="Dodaj usługę"
        android:id="@+id/btnAddService"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <Button
        android:text="Zatwierdź wybrane usługi"
        android:id="@+id/btnSubmitSelectedServices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/lvServiceList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundMainGradientSelector">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Status zlecenia:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvOrderStatusName"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="brak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Data rozpoczęcia:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvStartDateOfRepair"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Data zakończenia:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvEndDateOfRepair"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Koszt zlecenia [PLN]: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTotalCost"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Wykonwca zlecenia: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvWorkByUsers"
                android:layout_column="1"
                android:textSize="20dp"
                android:text="brak wykonawcy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_column="0"
                android:textSize="20dp"
                android:text="Szczegółowy opis:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_column="0"
                android:textSize="15dp"
                android:text="brak opisu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </GridLayout>
        <Button
            android:text="Dodaj usługę"
            android:id="@+id/btnService"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Napisz wiadomość"
            android:id="@+id/btnSentMessages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Odebrane wiadomości"
            android:id="@+id/btnReceivedMessages"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Usuń zlecenie"
            android:id="@+id/btnDeleteOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:text="Następne zlecenie"
            android:id="@+id/btnNextOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
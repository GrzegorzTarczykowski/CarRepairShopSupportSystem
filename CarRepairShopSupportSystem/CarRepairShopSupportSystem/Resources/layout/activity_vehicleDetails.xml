
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundMainGradientSelector">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="Edytuj dane pojazdu"
            android:id="@+id/btnEditVehicle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">
               <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Przebieg samochodu:   "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvEngineMileage"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Numer rejestracyjny:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvRegistrationNumbers"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Marka samochodu:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvVehicleBrand"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Model samochodu:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvVehicleModel"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Silnik:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvVehicleEngine"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Paliwo:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvVehicleFuel"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_column="0"
                    android:textSize="20dp"
                    android:text="Typ samochodu:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvVehicleType"
                    android:layout_column="1"
                    android:textSize="20dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </GridLayout>
        <Button
            android:text="Dodaj zlecenie"
            android:id="@+id/btnAddOrder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/lvOrderList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
</LinearLayout>
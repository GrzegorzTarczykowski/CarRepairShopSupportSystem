    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundMainGradientSelector">
    <TextView
        android:text="W dniach"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinnerWeekNumber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Godzina pracy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinnerWorkStartHour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSaveWorkerTimetable"
        android:text="Zapisz czas pracy na dany tydzieÅ„"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

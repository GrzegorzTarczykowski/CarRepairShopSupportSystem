<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundMainGradientSelector">
    <Button
        android:text="Dodaj część pojazdu"
        android:id="@+id/btnAddVehiclePart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <Button
        android:text="Zatwierdź wybrane części"
        android:id="@+id/btnSubmitSelectedVehicleParts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/lvVehiclePartList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/listViewItemSelector"/>
</LinearLayout>
